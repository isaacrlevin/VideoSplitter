@page "/projects"
@using VideoSplitter.Services
@using VideoSplitter.Models
@inject IProjectService ProjectService
@inject IJSRuntime JSRuntime

<PageTitle>Projects - VideoSplitter</PageTitle>

<div class="page-header">
    <div class="header-content">
        <h1>
            <span class="oi oi-video header-icon-large"></span>
            Projects
        </h1>
        <p class="page-description">Manage and organize all your video projects</p>
    </div>
    <a href="/new-project" class="btn btn-primary btn-lg">
        <span class="oi oi-plus"></span> New Project
    </a>
</div>

@if (projects == null)
{
    <div class="loading-state">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-3">Loading projects...</p>
    </div>
}
else if (!projects.Any())
{
    <div class="empty-state-container">
        <div class="empty-state-content">
            <div class="empty-icon-large">
                <span class="oi oi-video"></span>
            </div>
            <h3>No Projects Yet</h3>
            <p class="text-muted">Create your first project to start generating video clips for social media.</p>
            <a href="/new-project" class="btn btn-primary btn-lg">
                <span class="oi oi-plus"></span> Create First Project
            </a>
        </div>
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var project in projects)
        {
            <div class="col-xl-4 col-lg-6 col-md-6">
                <div class="project-card">
                    <div class="project-thumbnail">
                        @if (!string.IsNullOrEmpty(project.ThumbnailPath) && File.Exists(project.ThumbnailPath))
                        {
                            <img src="@GetThumbnailDataUrl(project.ThumbnailPath)" alt="@project.Name thumbnail" />
                        }
                        else
                        {
                            <div class="thumbnail-placeholder">
                                <span class="oi oi-video"></span>
                            </div>
                        }
                        <div class="project-status-overlay">
                            <span class="badge @GetStatusBadgeClass(project.Status)">
                                @GetStatusText(project.Status)
                            </span>
                        </div>
                    </div>
                    
                    <div class="project-content">
                        <h5 class="project-title">@project.Name</h5>
                        
                        @if (!string.IsNullOrEmpty(project.Description))
                        {
                            <p class="project-description">@project.Description</p>
                        }
                        
                        <div class="project-meta">
                            @if (project.Duration.HasValue)
                            {
                                <div class="meta-item">
                                    <span class="oi oi-clock"></span>
                                    <span>@FormatDuration(project.Duration.Value)</span>
                                </div>
                            }
                            <div class="meta-item">
                                <span class="oi oi-grid-three-up"></span>
                                <span>@project.Segments.Count() segments</span>
                            </div>
                            <div class="meta-item">
                                <span class="oi oi-calendar"></span>
                                <span>@project.UpdatedAt.ToString("MMM dd")</span>
                            </div>
                        </div>
                        
                        <div class="project-actions">
                            <a href="/project/@project.Id" class="btn btn-primary flex-fill">
                                <span class="oi oi-eye"></span> View
                            </a>
                            <button class="btn btn-outline-danger" @onclick="() => ConfirmDelete(project)" title="Delete">
                                <span class="oi oi-trash"></span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        padding-bottom: 1.5rem;
        border-bottom: 1px solid var(--border-color);
    }

    .header-content h1 {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-bottom: 0.5rem;
    }

    .header-icon-large {
        font-size: 2rem;
        color: var(--primary-color);
    }

    .page-description {
        color: var(--text-secondary);
        margin: 0;
        font-size: 1rem;
    }

    .loading-state {
        text-align: center;
        padding: 4rem 2rem;
        color: var(--text-secondary);
    }

    .empty-state-container {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 400px;
    }

    .empty-state-content {
        text-align: center;
        max-width: 400px;
    }

    .empty-icon-large {
        width: 120px;
        height: 120px;
        margin: 0 auto 1.5rem;
        background: linear-gradient(135deg, #EFF6FF 0%, #DBEAFE 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3rem;
        color: var(--primary-color);
        box-shadow: var(--shadow-md);
    }

    .empty-state-content h3 {
        margin-bottom: 0.75rem;
        color: var(--text-primary);
    }

    .empty-state-content p {
        margin-bottom: 1.5rem;
        font-size: 1rem;
    }

    .project-card {
        background: var(--bg-primary);
        border-radius: var(--border-radius);
        overflow: hidden;
        box-shadow: var(--shadow);
        transition: all var(--transition-base);
        border: 1px solid var(--border-color);
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .project-card:hover {
        box-shadow: var(--shadow-lg);
        transform: translateY(-4px);
    }

    .project-thumbnail {
        position: relative;
        width: 100%;
        height: 200px;
        overflow: hidden;
        background: var(--bg-secondary);
    }

    .project-thumbnail img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform var(--transition-slow);
    }

    .project-card:hover .project-thumbnail img {
        transform: scale(1.05);
    }

    .thumbnail-placeholder {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #F3F4F6 0%, #E5E7EB 100%);
        color: var(--text-muted);
        font-size: 3rem;
    }

    .project-status-overlay {
        position: absolute;
        top: 0.75rem;
        right: 0.75rem;
    }

    .project-status-overlay .badge {
        backdrop-filter: blur(10px);
        box-shadow: var(--shadow-md);
        font-size: 0.75rem;
        padding: 0.5rem 0.875rem;
    }

    .project-content {
        padding: 1.5rem;
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .project-title {
        font-size: 1.125rem;
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 0.5rem;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .project-description {
        font-size: 0.875rem;
        color: var(--text-secondary);
        margin-bottom: 1rem;
        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        line-height: 1.5;
    }

    .project-meta {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        margin-bottom: 1.25rem;
        padding-top: 1rem;
        border-top: 1px solid var(--border-color);
        margin-top: auto;
    }

    .meta-item {
        display: flex;
        align-items: center;
        gap: 0.375rem;
        font-size: 0.8125rem;
        color: var(--text-secondary);
    }

    .meta-item .oi {
        font-size: 0.75rem;
    }

    .project-actions {
        display: flex;
        gap: 0.75rem;
    }

    .project-actions .btn {
        flex-shrink: 0;
    }

    @@media (max-width: 768px) {
        .page-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 1rem;
        }

        .header-content h1 {
            font-size: 1.75rem;
        }

        .project-thumbnail {
            height: 180px;
        }
    }
</style>

@code {
    private IEnumerable<Project>? projects;

    protected override async Task OnInitializedAsync()
    {
        await LoadProjects();
    }

    private async Task LoadProjects()
    {
        try
        {
            projects = await ProjectService.GetAllProjectsAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading projects: {ex.Message}");
            projects = new List<Project>();
        }
    }

    private async Task ConfirmDelete(Project project)
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", 
            $"Are you sure you want to delete '{project.Name}'? This action cannot be undone.");
        
        if (confirmed)
        {
            try
            {
                await ProjectService.DeleteProjectAsync(project.Id);
                await LoadProjects();
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error deleting project: {ex.Message}");
                await JSRuntime.InvokeVoidAsync("alert", "Failed to delete project. Please try again.");
            }
        }
    }

    private string GetStatusBadgeClass(ProjectStatus status)
    {
        return status switch
        {
            ProjectStatus.VideoUploaded => "bg-info",
            ProjectStatus.TranscriptGenerating => "bg-warning",
            ProjectStatus.TranscriptGenerated => "bg-primary",
            ProjectStatus.SegmentsGenerating => "bg-warning",
            ProjectStatus.SegmentsGenerated => "bg-success",
            ProjectStatus.Completed => "bg-success",
            _ => "bg-secondary"
        };
    }

    private string GetStatusText(ProjectStatus status)
    {
        return status.ToString().Replace("Status", "");
    }

    private string FormatDuration(TimeSpan duration)
    {
        if (duration.TotalHours >= 1)
            return duration.ToString(@"h\:mm\:ss");
        else
            return duration.ToString(@"mm\:ss");
    }

    private string GetThumbnailDataUrl(string thumbnailPath)
    {
        try
        {
            var bytes = File.ReadAllBytes(thumbnailPath);
            var base64 = Convert.ToBase64String(bytes);
            return $"data:image/jpeg;base64,{base64}";
        }
        catch
        {
            return "";
        }
    }
}